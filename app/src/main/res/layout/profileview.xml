<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:a="http://schemas.android.com/apk/res/android"
    a:orientation="horizontal"
    a:layout_width="fill_parent"
    a:layout_height="wrap_content">

    <TextView
        a:id="@+id/name"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:layout_weight="1"
        a:text="TextView" />

    <TextView
        a:id="@+id/phone"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:layout_weight="1"
        a:text="TextView" />

    <TextView
        a:id="@+id/email"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:layout_weight="1"
        a:text="TextView" />

</LinearLayout>